# highlight the user name when logged in as root
if [[ "${USER}" == "root" ]]; then
	userStyle="${red}";
else
	userStyle="${green}";
fi;

# highlight the hostname when connected via ssh
if [[ "${SSH_TTY}" ]]; then
	hostStyle="${bold}${orange}";
else
	hostStyle="${red}";
fi;

